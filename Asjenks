pipeline {
    agent any
    
    tools{
        maven "Maven3"
    }
       
    stages {
        stage('clean workspace') {
            steps {
             cleanWs()
            }
        }
        stage('Git Checkout-github') {
            steps {
             git branch: 'main', url: 'https://github.com/Aseemakram19/maven-app.git'
            }
        }
        stage('Build') {
            steps {
               // sh 'mvn clean package'
               sh 'mvn -Dmaven.test.failure.ignore=true clean package'
            }
        }
    }
}
